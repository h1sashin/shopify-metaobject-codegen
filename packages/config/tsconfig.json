{
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2017",
    "lib": ["es2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "src",
    "declaration": true
  }
}

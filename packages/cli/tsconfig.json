{
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["typescript-transform-paths/register"]
  },
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "lib": ["es2021"],
    "module": "commonjs",
    "esModuleInterop": true,
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "strict": true,
    "rootDir": "src",
    "declaration": true
  }
}
